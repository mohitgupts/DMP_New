@model DMP.ModelsView.StateViewModel
@using DMP.Utils
<script src = "@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src = "@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="span4">
    @using (Ajax.BeginForm(new AjaxOptions { OnComplete = "closePopUp()", OnSuccess = "reLoad('/Master/States')" })) {
        @Html.HiddenFor(x => x.State.Id)
        <div>
            @Html.LabelFor(x => x.State.Name)
            @Html.TextBoxFor(x => x.State.Name)
        </div>
        <div>
            @Html.LabelFor(x => x.State.RegionId)
            @Html.DropDownListFor(x => x.State.RegionId, new SelectList(Model.Regions, "Key", "Value"))
        </div>
        <div>
            @Html.LabelFor(x => x.State.Description)
            @Html.TextAreaFor(x => x.State.Description)
        </div>
        <div>
            <input type="submit" value="Save" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn btn-primary" />
        </div>
    }
</div>

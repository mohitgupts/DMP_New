@model DMP.ModelsView.ProductViewModel
@using DMP.Utils
<script src = "@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src = "@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div class="span4">
    @using (Ajax.BeginForm(new AjaxOptions { OnComplete = "closePopUp()", OnSuccess = "reLoad('/Master/Products')" })) {
        @Html.HiddenFor(x => x.Product.Id)
        <div>
            @Html.LabelFor(x => x.Product.Name)
            @Html.TextBoxFor(x => x.Product.Name)
        </div>
        <div>
            @Html.LabelFor(x => x.Product.CategoryId)
            @Html.DropDownListFor(x => x.Product.CategoryId, new SelectList(Model.Categories, "Key", "Value"))
        </div>
        <div>
            IsCommon 
            @Html.EditorFor(x => x.Product.IsCommon)
        </div>
        <div>
            @Html.LabelFor(x => x.Product.Description)
            @Html.TextAreaFor(x => x.Product.Description)
        </div>
        <div>
            <input type="submit" value="Save" class="btn btn-primary" />
            <input type="reset" value="Reset" class="btn btn-primary" />
        </div>
    }
</div>
